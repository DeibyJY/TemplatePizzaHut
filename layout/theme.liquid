      .modal-solicitud-ubicacion {
        border-radius: var(--radio-medio);
        width: 80vw;
        height: 95vh;
      }

      /* Cabecera del modal */
      .modal-head {
        background-color: var(--color-negro);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        width: 100%;
        padding: var(--espaciado-pequeno) 0px;
        height: 11%;
