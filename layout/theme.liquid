      .modal-head button {
        background: transparent;
        border: none;
        color: var(--color-blanco);
        position: absolute;
        left: var(--espaciado-base);
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        fill: var(--color-blanco);
      }

      .modal-head img {
        width: 40px;
        height: 40px;
        background-color: var(--color-blanco);
        border-radius: var(--radio-circular);
        padding: 3.5px;
      }

      /* Cuerpo del modal */
