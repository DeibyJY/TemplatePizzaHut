            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Shopify-Access-Token': myTest
            },
            body: JSON.stringify({
                query: createQuery(),
                variables: {}
            })
        });
        
        const data = await response.json();
        console.log('Respuesta:', data); 
