        botonIncremento.style.setProperty('cursor', debeDeshabilitarIncremento ? 'not-allowed' : 'pointer', 'important');
      }
  
      // Manejar botón de decremento
      if (botonDecremento) {
        const debeDeshabilitarDecremento = cantidad === 0;
        botonDecremento.disabled = debeDeshabilitarDecremento;
        botonDecremento.style.setProperty('fill', debeDeshabilitarDecremento ? '#B5B6BD' : '', 'important');
        botonDecremento.style.setProperty('cursor', debeDeshabilitarDecremento ? 'not-allowed' : 'pointer', 'important');
      }
    });
  }

  // Función corregida para marcar opciones requeridas
  function marcarOpcionesRequeridas() {
    // Para menu-item-producto
    document.querySelectorAll('.menu-item-producto').forEach(menuItem => {
      if (!esElementoRequerido(menuItem)) return;
      
      const itemMenuDiv = menuItem.querySelector('.item-menuItem');
      const limite = parseInt(itemMenuDiv.getAttribute('data-limite') || '0');
      const grupo = menuItem.getAttribute('data-group');
  
      if (itemMenuDiv.querySelector('input[type="radio"]')) {
        const primerRadio = itemMenuDiv.querySelector('input[type="radio"]');
        if (primerRadio) {
          primerRadio.checked = true;
          triggerChange(primerRadio);
        }
      } else if (itemMenuDiv.querySelector('.controles-cantidad2')) {
        const primerDisplay = itemMenuDiv.querySelector('.cantidad-display2');
        if (primerDisplay) {
          primerDisplay.textContent = limite.toString();
          actualizarBotonesNumberCount(grupo);
        }
      } else if (itemMenuDiv.querySelector('input[type="checkbox"]')) {
        const checkboxes = itemMenuDiv.querySelectorAll('input[type="checkbox"]');
        for (let i = 0; i < Math.min(limite, checkboxes.length); i++) {
          checkboxes[i].checked = true;
          triggerChange(checkboxes[i]);
        }
      }
    });
  
    // Para sub-item-producto
    document.querySelectorAll('.sub-item-producto').forEach(subItem => {
      if (!esElementoRequerido(subItem)) return;
  
      const itemMenuDiv = subItem.querySelector('.item-menuItem');
      const min = parseInt(itemMenuDiv.getAttribute('data-min') || '0');
      const max = parseInt(itemMenuDiv.getAttribute('data-max') || min.toString());
      const grupo = subItem.getAttribute('data-sub-item');
  
      if (itemMenuDiv.querySelector('input[type="radio"]')) {
        const primerRadio = itemMenuDiv.querySelector('input[type="radio"]');
        if (primerRadio) {
          primerRadio.checked = true;
          triggerChange(primerRadio);
          verificarRequeridos();
        }
      } else if (itemMenuDiv.querySelector('.controles-cantidad2')) {
        const displays = itemMenuDiv.querySelectorAll('.cantidad-display2');
        if (displays.length > 0) {
          // Distribuir el mínimo entre los elementos
          const valorBase = Math.floor(min / displays.length);
          const residuo = min % displays.length;
          
          displays.forEach((display, index) => {
            let valor = valorBase;
            if (index < residuo) valor++;
            display.textContent = valor.toString();
          });
          actualizarBotonesNumberCount(grupo, max);
          verificarRequeridos();
        }
      } else if (itemMenuDiv.querySelector('input[type="checkbox"]')) {
        const checkboxes = itemMenuDiv.querySelectorAll('input[type="checkbox"]');
        for (let i = 0; i < Math.min(min, checkboxes.length); i++) {
          checkboxes[i].checked = true;
          triggerChange(checkboxes[i]);
        }
      }
    });
  }

  // Control de visibilidad de sub-items
  function actualizarVisibilidadSubItems() {
    // Ocultar todos los sub-items inicialmente
    document.querySelectorAll('.sub-item-producto').forEach(subItem => {
      subItem.style.display = 'none';
    });

    // Mostrar sub-items relacionados con elementos seleccionados
    document.querySelectorAll('.menu-item-producto').forEach(menuItem => {
      const menuItemId = menuItem.getAttribute('menu-item');

      // Verificar elementos seleccionados
      // Radio buttons
      const radiosSeleccionados = menuItem.querySelectorAll('input[type="radio"]:checked');
      radiosSeleccionados.forEach(radio => {
        const idProducto = radio.getAttribute('id-producto');
        mostrarSubItemsRelacionados(menuItemId, idProducto);
      });

      // Checkboxes
      const checkboxesSeleccionados = menuItem.querySelectorAll('input[type="checkbox"]:checked');
      checkboxesSeleccionados.forEach(checkbox => {
        const idProducto = checkbox.getAttribute('id-producto');
        mostrarSubItemsRelacionados(menuItemId, idProducto);
      });

      // NumberCount
      const contadoresActivos = menuItem.querySelectorAll('.cantidad-display2');
      contadoresActivos.forEach(display => {
        if (parseInt(display.textContent) > 0) {
          const contenedor = display.closest('.opcion-principal-detalle-oferta2');
          const idProducto = contenedor.getAttribute('id-producto');
          mostrarSubItemsRelacionados(menuItemId, idProducto);
        }
      });
    });
  }

  function mostrarSubItemsRelacionados(grupo, productoId) {
    document.querySelectorAll(
      `.sub-item-producto[data-parent-group="${grupo}"][data-producto-id="${productoId}"]`
    ).forEach(subItem => {
      subItem.style.display = 'block';
    });
  }

  // Funciones de validación
  function validarLimiteCheckbox(casilla) {
    const contenedor = casilla.closest('.item-menuItem');
    const grupo = casilla.getAttribute('data-group');
    const productoId = casilla.getAttribute('data-producto-id');
    
    const esSubItem = contenedor.closest('.sub-item-producto') !== null;
    
    let limite, min;
    if (esSubItem) {
      limite = parseInt(contenedor.getAttribute('data-max'));
      min = parseInt(contenedor.getAttribute('data-min'));
    } else {
      limite = parseInt(contenedor.getAttribute('data-limite'));
      min = limite;
    }

    const checkboxes = contenedor.querySelectorAll('input[type="checkbox"]:checked');
    if (checkboxes.length > limite) {
      casilla.checked = false;
    }

    if (!esSubItem) {
      if (casilla.checked) {
        mostrarSubItemsRelacionados(grupo, productoId);
      } else {
        document.querySelectorAll(
          `.sub-item-producto[data-parent-group="${grupo}"][data-producto-id="${productoId}"]`
        ).forEach(subItem => {
          subItem.style.display = 'none';
        });
      }
    }

    verificarRequeridos();
  }

  function validarLimiteRadio(radio) {
    const grupo = radio.getAttribute('data-group');
    const productoId = radio.getAttribute('data-producto-id');
    
    if (radio.checked) {
      // Ocultar todos los sub-items del grupo
      document.querySelectorAll(`.sub-item-producto[data-parent-group="${grupo}"]`)
        .forEach(item => item.style.display = 'none');
      
      // Mostrar sub-items del elemento seleccionado
      mostrarSubItemsRelacionados(grupo, productoId);
    }
  
    verificarRequeridos();
  }

  function verificarRequeridos() {
    const COLORS = obtenerColores();
  
    document.querySelectorAll('.menu-item-producto, .sub-item-producto').forEach(item => {
      const itemMenuDiv = item.querySelector('.item-menuItem');
      const esSubItem = item.classList.contains('sub-item-producto');
      const solicitudElement = item.querySelector('.titulo-detalle-seleccion');
      const esRequerido = solicitudElement.textContent.trim() === 'REQUERIDO';
      
      // Obtener límites según el tipo
      let minimo, maximo;
      if (esSubItem) {
        minimo = parseInt(itemMenuDiv.getAttribute('data-min') || '0');
        maximo = parseInt(itemMenuDiv.getAttribute('data-max') || minimo.toString());
      } else {
        minimo = esRequerido ? parseInt(itemMenuDiv.getAttribute('data-limite') || '0') : 0;
        maximo = parseInt(itemMenuDiv.getAttribute('data-limite') || '0');
      }
  
      let cantidadSeleccionada = 0;
  
      // Contar selecciones según tipo de input
      if (itemMenuDiv.querySelector('input[type="radio"]')) {
        cantidadSeleccionada = itemMenuDiv.querySelectorAll('input[type="radio"]:checked').length;
      } else if (itemMenuDiv.querySelector('.controles-cantidad2')) {
        cantidadSeleccionada = Array.from(itemMenuDiv.querySelectorAll('.cantidad-display2'))
          .reduce((sum, display) => sum + parseInt(display.textContent || '0'), 0);
      } else if (itemMenuDiv.querySelector('input[type="checkbox"]')) {
        cantidadSeleccionada = itemMenuDiv.querySelectorAll('input[type="checkbox"]:checked').length;
      }
  
      // Determinar estado
      const cumpleMinimo = cantidadSeleccionada >= minimo;
      const cumpleMaximo = cantidadSeleccionada <= maximo;
      
      // Colores basados en estado
      let colorElementos, colorSolicitud;
      
      if (esRequerido || minimo > 0) {
        if (!cumpleMinimo) {
          colorElementos = COLORS.ERROR;
          colorSolicitud = COLORS.ERROR;
        } else {
          colorElementos = COLORS.DEFAULT;
          colorSolicitud = COLORS.REQUERIDO;
        }
      } else {
        colorElementos = COLORS.DEFAULT;
        colorSolicitud = COLORS.OPCIONAL;
      }
  
      if (!cumpleMaximo) {
        colorElementos = COLORS.ERROR;
        colorSolicitud = COLORS.ERROR;
      }
  
      // Aplicar colores
      const elementosTexto = item.querySelectorAll('.titulo-base1, .titulo-base2');
      const nombresProductos = item.querySelectorAll('.producto-nombre2, .producto-nombre3');
      
      elementosTexto.forEach(el => {
        el.style.setProperty('color', colorElementos, 'important');
      });
      
      nombresProductos.forEach(el => {
        el.style.setProperty('color', colorElementos, 'important');
      });
  
      solicitudElement.style.setProperty('color', colorSolicitud, 'important');
    });
  }

  function incrementCantidad(itemId, grupo) {
    const display = document.getElementById(`cantidad-${itemId}`);
    if (!display) return;
  
    const controlCantidad = display.closest('.controles-cantidad2');
    const itemMenuDiv = controlCantidad.closest('.item-menuItem');
    const esSubItem = !!itemMenuDiv.closest('.sub-item-producto');
    
    let maximo;
    if (esSubItem) {
      maximo = parseInt(itemMenuDiv.getAttribute('data-max') || '0');
    } else {
      maximo = parseInt(itemMenuDiv.getAttribute('data-limite') || '0');
    }
  
    const sumaActual = obtenerSumaGrupo(grupo);
    if (sumaActual < maximo) {
      const valorActual = parseInt(display.textContent || '0');
      display.textContent = (valorActual + 1).toString();
      actualizarBotonesNumberCount(grupo, maximo);
      verificarRequeridos();
  
      // Actualizar visibilidad de sub-items si es necesario
      if (!esSubItem) {
        const menuItem = controlCantidad.closest('.opcion-principal-detalle-oferta2');
        const idProducto = menuItem.getAttribute('data-producto-id');
        if (valorActual === 0) { // Solo cuando cambiamos de 0 a 1
          mostrarSubItemsRelacionados(grupo, idProducto);
        }
      }
    }
  }
  
  function decrementCantidad(itemId, grupo) {
    const display = document.getElementById(`cantidad-${itemId}`);
    if (!display) return;
  
    const valorActual = parseInt(display.textContent || '0');
    if (valorActual <= 0) return;
  
    const controlCantidad = display.closest('.controles-cantidad2');
    const itemMenuDiv = controlCantidad.closest('.item-menuItem');
    const esSubItem = !!itemMenuDiv.closest('.sub-item-producto');
    
    let minimo, maximo;
    if (esSubItem) {
      minimo = parseInt(itemMenuDiv.getAttribute('data-min') || '0');
      maximo = parseInt(itemMenuDiv.getAttribute('data-max') || minimo.toString());
    } else {
      maximo = parseInt(itemMenuDiv.getAttribute('data-limite') || '0');
      minimo = 0;
    }
  
    const sumaTotal = obtenerSumaGrupo(grupo);
    if (valorActual > 0 && (!esSubItem || sumaTotal > minimo)) {
      display.textContent = (valorActual - 1).toString();
      actualizarBotonesNumberCount(grupo, maximo);
      verificarRequeridos();
  
      // Actualizar visibilidad de sub-items si es necesario
      if (!esSubItem) {
        const menuItem = controlCantidad.closest('.opcion-principal-detalle-oferta2');
        const idProducto = menuItem.getAttribute('data-producto-id');
        if (valorActual === 1) { // Solo cuando cambiamos de 1 a 0
          const menuItem = display.closest('.menu-item-producto');
          const subItems = document.querySelectorAll(
            `.sub-item-producto[data-parent-group="${grupo}"][data-producto-id="${idProducto}"]`
          );
          subItems.forEach(item => {
            item.style.display = 'none';
          });
        }
      }
    }
  }
  
  function obtenerSumaGrupo(grupo) {
    return Array.from(document.querySelectorAll(`.controles-cantidad2[data-group="${grupo}"] .cantidad-display2`))
      .reduce((sum, display) => sum + parseInt(display.textContent || '0'), 0);
  }
  
  function actualizarBotonesNumberCount(grupo, maxLimit = null) {
    const COLORS = obtenerColores();
    const contenedor = document.querySelector(`[data-group="${grupo}"]`);
    const esSubItem = !!contenedor?.closest('.sub-item-producto');
    
    let minimo, maximo;
    if (esSubItem) {
      const itemMenuDiv = contenedor.closest('.item-menuItem');
      minimo = parseInt(itemMenuDiv.getAttribute('data-min') || '0');
      maximo = maxLimit || parseInt(itemMenuDiv.getAttribute('data-max') || '0');
    } else {
      maximo = parseInt(contenedor?.getAttribute('data-limite') || maxLimit || '0');
      minimo = 0;
    }
  
    const elementos = document.querySelectorAll(`.controles-cantidad2[data-group="${grupo}"]`);
    const sumaTotal = Array.from(elementos)
      .reduce((sum, control) => {
        const display = control.querySelector('.cantidad-display2');
        return sum + parseInt(display?.textContent || '0');
      }, 0);
  
    elementos.forEach(controlCantidad => {
      const botonIncremento = controlCantidad.querySelector('button:last-child');
      const botonDecremento = controlCantidad.querySelector('button:first-child');
      const display = controlCantidad.querySelector('.cantidad-display2');
      const cantidad = parseInt(display.textContent || '0');
  
      // Botón incremento
      if (botonIncremento) {
        const debeDeshabilitarIncremento = sumaTotal >= maximo;
        botonIncremento.disabled = debeDeshabilitarIncremento;
        botonIncremento.style.setProperty('fill', debeDeshabilitarIncremento ? COLORS.OPCIONAL : '', 'important');
        botonIncremento.style.setProperty('cursor', debeDeshabilitarIncremento ? 'not-allowed' : 'pointer', 'important');
      }
  
      // Botón decremento
      if (botonDecremento) {
        const debeDeshabilitarDecremento = cantidad === 0 || (esSubItem && sumaTotal <= minimo);
        botonDecremento.disabled = debeDeshabilitarDecremento;
        botonDecremento.style.setProperty('fill', debeDeshabilitarDecremento ? COLORS.OPCIONAL : '', 'important');
        botonDecremento.style.setProperty('cursor', debeDeshabilitarDecremento ? 'not-allowed' : 'pointer', 'important');
      }
    });
  }
  

  function esElementoRequerido(elemento) {
    const solicitudText = elemento.querySelector('.titulo-detalle-seleccion').textContent.trim();
    if (solicitudText === 'REQUERIDO') return true;
    
    const itemMenuDiv = elemento.querySelector('.item-menuItem');
    if (elemento.classList.contains('sub-item-producto')) {
      const min = parseInt(itemMenuDiv.getAttribute('data-min') || '0');
      return min > 0;
    }
    return false;
  }

  // Helper function to trigger change events
  function triggerChange(element) {
    const event = new Event('change', {
      bubbles: true,
      cancelable: true,
    });
    element.dispatchEvent(event);
  }

  (function() {
    function initializeShopifyProduct() {
        return testPrueba()
            .then(() => {
                initializeProductMenu();
                console.log('Producto inicializado correctamente');
            })
            .catch(error => {
                console.error('Error durante la inicialización:', error);
            });
    }

    // Función que intenta inicializar
    function tryInitialize() {
        // Verificar si el elemento contenedor existe
        const contenedor = document.querySelector('.sector-general-opciones-producto');
        if (!contenedor) {
            console.log('Contenedor no encontrado, reintentando...');
            setTimeout(tryInitialize, 100); // Reintentar en 100ms
            return;
        }

        initializeShopifyProduct();
    }

    // Manejo de diferentes eventos de carga
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', tryInitialize);
    } else {
        tryInitialize();
    }

    // Backup: Si algo falla, intentar en window.load
    window.addEventListener('load', function() {
        const contenedor = document.querySelector('.sector-general-opciones-producto');
        if (!contenedor) {
            tryInitialize();
        }
    });
  })();
</script>
